  "compilerOptions": {
    "outDir": "./build",
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    "declaration": true
