{
  "compilerOptions": {
    "outDir": "./build",
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    "declaration": true,
    "baseUrl": "src",
    "paths": {
      "@globals/*": ["globals/*"],
      "@atoms": ["atoms/index"],
      "@atoms/*": ["atoms/*"],
      "@ions": ["ions/index"],
      "@ions/*": ["ions/*"],
      "@icons/*": ["icons/*"],
      "@utility/*": ["utility/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
