{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    "resolveJsonModule": true,
    "declaration": true,
    "baseUrl": "src",
    "paths": {
      "@globals/*": ["globals/*"],
      "@atoms": ["atoms/index"],
      "@atoms/*": ["atoms/*"],
      "@ions": ["ions/index"],
      "@ions/*": ["ions/*"],
      "@icons": ["icons/index"],
      "@icons/*": ["icons/*"],
      "@components": ["components/index"],
      "@components/*": ["components/*"],
      "@colors": ["colors/colors"],
      "@colors/*": ["colors/*"],
      "@typings/*": ["typings/*"],
      "@utility/*": ["utility/*"],
      "@design-tokens/*": ["design-tokens/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}
