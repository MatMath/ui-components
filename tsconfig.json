{
  "compilerOptions": {
    "outDir": "./build",
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    "declaration": true,
    "baseUrl": "src",
    "paths": {
      "@globals/*": ["globals/*"],
      "@atoms/*": ["atoms/*"],
      "@ions/*": ["ions/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
